#include <iostream>
#include <cstdlib> // Para abs()

using namespace std;

int calcularMCD(int a, int b) {
    a = abs(a);
    b = abs(b);

    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int calcularMCM(int a, int b) {
    if (a == 0 || b == 0) {
        return 0;
    }

    int mcd = calcularMCD(a, b);

    return abs(a / mcd * b);
}

void funcionesMCD_MCM() {
    int num1, num2;
    cout << "--- MCD y MCM ---" << endl;
    cout << "Ingrese el primer numero entero: ";
    cin >> num1;
    cout << "Ingrese el segundo numero entero: ";
    cin >> num2;

    int mcd_resultado = calcularMCD(num1, num2);
    int mcm_resultado = calcularMCM(num1, num2);

    cout << "\nMaximo Comun Divisor (MCD) de " << num1 << " y " << num2 << " es: " << mcd_resultado << endl;
    cout << "Minimo Comun Multiplo (mcm) de " << num1 << " y " << num2 << " es: " << mcm_resultado << endl;
}
