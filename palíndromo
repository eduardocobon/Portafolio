#include <iostream>
#include <string>
#include <algorithm>
#include <locale>

using namespace std;

string limpiarCadena(const string& texto) {
    string limpio = "";

    for (char c : texto) {
        if (isalnum(c)) {
            limpio += tolower(c);
        }
    }
    return limpio;
}

bool esPalindromo(const string& texto) {
    string limpio = limpiarCadena(texto);

    if (limpio.empty()) {
        return false;
    }

    string invertido = limpio;
    reverse(invertido.begin(), invertido.end());

    return limpio == invertido;
}
